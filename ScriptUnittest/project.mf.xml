<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<manifest>
    <application name="ScriptUnittest">
        <crown name="ScriptUnittest">
            <desc>user script</desc>
            <serves>
                <function name="runUnittest">
                    <desc>Runs all unittests of this app and returns pass or fail</desc>
                    <return desc="Name of the App which contains the unittest" name="appName" type="string"/>
                    <return desc="Test result, true if all unittests are passed" name="result" type="bool"/>
                    <return desc="Path to failed test" multiplicity="?" name="failPath" type="string"/>
                </function>
            </serves>
        </crown>
        <meta key="author">AppSpace Sample</meta>
        <meta key="version">2.5.0</meta>
        <meta key="priority">low</meta>
        <meta key="copy-protected">false</meta>
        <meta key="read-protected">false</meta>
        <meta key="tags">Testing</meta>
        <entry default="main.lua" path="scripts"/>
    </application>
</manifest>
